		<item name="postItemBackground">@drawable/border_light</item>
		<item name="urlLinkForeground">@color/white_url_link</item>
		<item name="tabCloseButtonBackground">@drawable/tab_close_light</item>
		<item name="tabSeparatorBackground">@color/white_tab_separator</item>
        <!-- Comment colors -->
        <item name="postQuoteForeground">@color/white_post_quote</item>
        <item name="spoilerForeground">@color/white_spoiler_text</item>
        <item name="spoilerBackground">@color/white_spoiler</item>
        <!-- Android built-in styles -->
        <item name="android:windowBackground">@color/white_background</item>
        <item name="android:colorBackground">@color/white_background</item>
        <item name="android:textColorPrimary">@color/white_primary_text</item>
