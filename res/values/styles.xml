    <style name="WidgetTextViewListSeparator">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?listSectionBackground</item>
        <item name="android:paddingLeft">5.0sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">25.0dip</item>
    </style>

    <style name="TextFormatButton">
        <item name="android:background">@null</item>
        <item name="android:padding">5dip</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">40dip</item>
    </style>

    <style name="TextFormatButtonLong" parent="@style/TextFormatButton">
        <item name="android:layout_width">62dip</item>
    </style>

